@model IEnumerable<ProductManagementSystem.Models.CustomerItem>

@{
    ViewData["Title"] = "Customer Items";
}

<h2>Customer Items</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Assign New Item</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Item</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customerItem in Model)
        {
            <tr>
                <td>@customerItem.Customer.Name</td>
                <td>@customerItem.Item.Name</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@customerItem.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
