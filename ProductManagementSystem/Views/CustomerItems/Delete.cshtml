@model ProductManagementSystem.Models.CustomerItem

@{
    ViewData["Title"] = "Delete Customer Item";
}

<h2>Delete Customer Item</h2>

<h5>Are you sure you want to delete this customer item?</h5>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">Customer: @Model.Customer.Name</h5>
        <p class="card-text">
            <strong>Item:</strong> @Model.Item.Name <br />
            <strong>Description:</strong> @Model.Item.Description <br />
            <strong>Price:</strong> $@Model.Item.DefaultPrice
        </p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
