@model ProductManagementSystem.Models.CustomerItem

@{
    ViewData["Title"] = "Assign Item to Customer";
}

<h2>Assign Item to Customer</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CustomerId" class="control-label"></label>
        <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ItemId" class="control-label"></label>
        <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId"></select>
        <span asp-validation-for="ItemId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Assign" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
