@model ProductManagementSystem.Models.Customer

@{
    ViewData["Title"] = "Create Customer";
}

<h2 class="mb-4">Create Customer</h2>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    <div class="row mb-3">
        <label asp-for="Name" class="col-sm-2 col-form-label fw-bold">Name</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Enter customer name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Email" class="col-sm-2 col-form-label fw-bold">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Enter customer email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label fw-bold">Phone Number</label>
        <div class="col-sm-10">
            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="IsActive" class="col-sm-2 col-form-label fw-bold">Status</label>
        <div class="col-sm-10">
            <select asp-for="IsActive" class="form-select" required>
                <option value="true">Active</option>
                <option value="false">Inactive</option>
            </select>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
