@model ProductManagementSystem.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h2 class="mb-4">Delete Customer</h2>

<h5>Are you sure you want to delete this customer?</h5>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title fw-bold">@Model.Name</h5>
        <p class="card-text">
            <strong>Email:</strong> @Model.Email <br />
            <strong>Phone Number:</strong> @Model.PhoneNumber <br />
            <strong>Status:</strong> @(Model.IsActive ? "Active" : "Inactive")
        </p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
