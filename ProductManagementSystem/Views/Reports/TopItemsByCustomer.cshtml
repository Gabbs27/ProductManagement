@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Top Items by Customer";
}

<h2>Top Items by Customer</h2>

<table class="table table-bordered mt-4">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Item Name</th>
            <th>Item Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            foreach (var item in customer.TopItems)
            {
                <tr>
                    <td>@customer.Customer.Name</td>
                    <td>@item.ItemName</td>
                    <td>@item.ItemPrice.ToString("C")</td>
                </tr>
            }
        }
    </tbody>
</table>
