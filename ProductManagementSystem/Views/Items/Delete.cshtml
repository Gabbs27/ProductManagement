@model ProductManagementSystem.Models.Item

@{
    ViewData["Title"] = "Delete Item";
}

<h2 class="mb-4">Delete Item</h2>

<h5>Are you sure you want to delete this item?</h5>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title fw-bold">@Model.Name</h5>
        <p class="card-text">
            <strong>Item Number:</strong> @Model.ItemNumber <br />
            <strong>Description:</strong> @Model.Description <br />
            <strong>Default Price:</strong> $@Model.DefaultPrice <br />
            <strong>Category:</strong> @Model.ItemCategory <br />
            <strong>Status:</strong> @(Model.Status ? "Active" : "Inactive")
        </p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
